<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp4"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiApp4">

    <ShellContent
        Title="Ana Sayfa"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Icon="home.png"/>

    <ShellContent
     Title="Kredi Hesaplama"
     ContentTemplate="{DataTemplate local:KrediHesaplama}"
     Route="KrediHesaplama" 
     Icon="credit.png"/>

    <ShellContent
     Title="Vücut Kitle İndeksi"
     ContentTemplate="{DataTemplate local:VucutKitleIndeksi}"
     Route="Vücut Kitle İndeksi" 
     Icon="scale.png"/>

    <ShellContent
     Title="Renk Seçici"
     ContentTemplate="{DataTemplate local:RenkSecimi}"
     Route="Renk Seçici" 
     Icon="color.png"/>

    <ShellContent
     Title="Todo List"
     ContentTemplate="{DataTemplate local:ToDoListPage}"
     Route="Todo List" 
     Icon="todo.png"/>
</Shell>
